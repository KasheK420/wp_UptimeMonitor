{
    "name": "lukasmajoros/uptime-monitor",
    "description": "A WordPress plugin for monitoring device uptime with visual status displays",
    "type": "wordpress-plugin",
    "version": "1.1.0",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Lukáš Majoros",
            "email": "contact@lukasmajoros.com",
            "homepage": "https://lukasmajoros.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "composer/installers": "^1.0 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.5",
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress"
    },
    "support": {
        "issues": "https://github.com/lukasmajoros/uptime-monitor/issues",
        "source": "https://github.com/lukasmajoros/uptime-monitor"
    },
    "keywords": [
        "wordpress",
        "plugin",
        "uptime",
        "monitoring",
        "status",
        "ping",
        "server"
    ]
}